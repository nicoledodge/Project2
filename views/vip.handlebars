<div class="text-center m-4">
    <h2>REGISTER AS A VIP</h2>
</div>
<!--<div class="col-md-3"> </div>-->
<div>
    <form class="upgrade-form">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-lg-6">
                <!--                Full name div-->
                <!-- First Name -->
                <div class="row">
                    <div class="input-group col-md-6 mb-4">
                        <div class="input-group-prepend">
                        </div>
                        <input id="firstName" type="text" name="firstname" placeholder="First Name"
                            class="form-control bg-white border-md" />
                    </div>

                    <!-- Last Name -->
                    <div class="input-group col-md-6 mb-4">
                        <div class="input-group-prepend"></div>
                        <input id="lastName" type="text" name="lastname" placeholder="Last Name"
                            class="form-control bg-white border-md" />
                    </div>
                </div>
                <!-- Email Address -->
                <div class="input-group col-lg-12 mb-4">
                    <div class="input-group-prepend">
                    </div>
                    <input id="email" type="email" name="email" placeholder="Email Address"
                        class="form-control bg-white border-md" />
                </div>

                <!-- Phone Number -->
                <div class="input-group col-lg-12 mb-4">
                    <div class="input-group-prepend"></div>
                    <input id="phoneNumber" type="tel" name="phone" placeholder="Phone Number"
                        class="form-control bg-white border-md pl-3" />
                </div>
                <div class="input-group col-lg-12 mb-4">
                    <div class="input-group-prepend">
                    </div>
                    <input id="dateOfBirth" type="text" name="dateOfBirth" placeholder="Date of Birth"
                        class="form-control bg-white border-md pl-3" />
                </div>
                <div class="input-group col-lg-12 mb-4">
                    <div class="input-group-prepend">
                    </div>
                    <input id="zipcode" type="text" name="zipcode" placeholder="Zipcode"
                        class="form-control bg-white border-md pl-3" />
                </div>
                <div class="row">
                    <div class="input-group col-md-6 mb-4">
                        <div class="input-group-prepend">
                        </div>
                        <input id="password" type="password" name="password" placeholder="Password"
                               class="form-control bg-white border-md pl-3" />
                    </div>
                    <div class="input-group col-md-6 mb-4">
                        <div class="input-group-prepend"></div>
                        <input id="passwordReenter" type="password" name="password" placeholder="Re-Enter your Password"
                               class="form-control bg-white border-md pl-3" />
                    </div>
                </div>
                <div class="input-group col-lg-12 mb-4">
                    <div class="input-group-prepend"></div>
                    <input type="checkbox" class="checkbox" id="isVip" name="isVip" value="true" default="checked"/>
                    <label for = "isVip">Check box if you would like to sign up for VIP</label>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Sign up</button>
                    Already Registered? <a href="/login">Login</a>
                    Sign Up For Free? <a href="/signup">Sign Up FREE!</a>
                </div>
            </div>
        </div>
    </form>
</div>
<script>document.getElementById("isVip").checked = true</script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="./js/vip.js"></script>